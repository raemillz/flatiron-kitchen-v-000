<%= form_for(recipe) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </div>

  <div class="field">
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br>
  </div>

  <div class="field">
    <%= f.fields_for :ingredients do |ingredient_builder| %>
      <%= ingredient_builder.label :name %>
      <%= ingredient_builder.text_field :name %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
